# Test Environment Configuration
# This file is used for local testing without external dependencies

# ==================== Application Settings ====================
APP_ENV=testing
DEBUG=false
APP_NAME=RAG-KMS-Test
APP_VERSION=1.0.0

# ==================== JWT Settings (Testing Only) ====================
# WARNING: These are test credentials. Never use in production.
JWT_SECRET_KEY=test-secret-key-minimum-32-characters-for-testing
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Database Settings (Mock) ====================
# These are placeholders - actual tests use mock adapters
DATABASE_URL=sqlite:///:memory:
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=test
NEO4J_PASSWORD=test

# ==================== LLM Settings (Mock) ====================
# Tests use MockLLMAdapter, these are not called
LLM_PROVIDER=mock
OPENAI_API_KEY=test-openai-key-not-used
ANTHROPIC_API_KEY=test-anthropic-key-not-used

# ==================== Vector Store Settings (Mock) ====================
# Tests use MockVectorStoreAdapter
VECTOR_STORE_TYPE=mock
MILVUS_HOST=localhost
MILVUS_PORT=19530

# ==================== Feature Flags ====================
ENABLE_VISION_ROUTING=true
ENABLE_GRAPH_SEARCH=true
ENABLE_HYBRID_SEARCH=true

# ==================== Security Settings ====================
# CORS settings for testing
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true

# Cookie settings
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=false

# ==================== Logging ====================
LOG_LEVEL=WARNING
LOG_FORMAT=simple
